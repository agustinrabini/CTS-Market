<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="#FFFFFF"
    android:elevation="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efebe9"
        android:visibility="visible"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.5"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/tv_shippingO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Número de orden:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline426"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline425"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_quantity_productsO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Número de orden:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline425"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline427" />

        <TextView
            android:id="@+id/tv_id_orderO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline426"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/guideline425"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_priceO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline427"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/guideline425"
            card_view:layout_constraintTop_toTopOf="@+id/guideline426" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline425"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent=".5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline426"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline427"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.66" />

        <ImageView
            android:id="@+id/iv_optionsO"
            android:layout_width="185dp"
            android:layout_height="63dp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline427"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_order_priceO"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline426"
            card_view:srcCompat="@drawable/menubuttonofthreelines_79781" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
