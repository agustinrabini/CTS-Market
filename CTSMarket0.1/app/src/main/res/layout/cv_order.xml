<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/background_general2"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:visibility="visible"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.5"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center_vertical"
            android:text="Estado de orden:"
            android:textColor="#000000"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline426"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline425"
            card_view:layout_constraintStart_toStartOf="@+id/guideline194"
            card_view:layout_constraintTop_toTopOf="@+id/guideline310" />


        <TextView
            android:id="@+id/tv_stateO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_semibold"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="15dp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline426"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/guideline425"
            card_view:layout_constraintTop_toTopOf="@+id/guideline310"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center_vertical"
            android:text="Cantidad objetos:"
            android:textColor="#000000"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline271"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_quantity_productsO"
            card_view:layout_constraintStart_toStartOf="@+id/guideline194"
            card_view:layout_constraintTop_toTopOf="@+id/guideline427" />

        <TextView
            android:id="@+id/textView70"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center_vertical"
            android:text="Fecha:"
            android:textColor="#000000"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline273"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_quantity_productsO"
            card_view:layout_constraintStart_toStartOf="@+id/guideline194"
            card_view:layout_constraintTop_toTopOf="@+id/guideline271" />

        <TextView
            android:id="@+id/tv_dateO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_semibold"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView70"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/textView70"
            card_view:layout_constraintTop_toTopOf="@+id/guideline271" />

        <TextView
            android:id="@+id/tv_quantity_productsO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/quicksand_semibold"
            android:gravity="center"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline271"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/guideline425"
            card_view:layout_constraintTop_toTopOf="@+id/guideline427" />

        <TextView
            android:id="@+id/tv_order_priceO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline427"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/guideline425"
            card_view:layout_constraintTop_toTopOf="@+id/guideline426"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_order_priceO2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center_vertical"
            android:text="Precio de la orden:"
            android:textColor="#000000"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline427"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_order_priceO"
            card_view:layout_constraintStart_toStartOf="@+id/guideline194"
            card_view:layout_constraintTop_toTopOf="@+id/guideline426" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline425"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline194"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline426"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline310"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.01" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline427"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline271"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline273"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline294"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.99" />

        <TextView
            android:id="@+id/tv_optionsO"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:text="Ver orden completa"
            android:textColor="@color/ligthBlue"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline294"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline273"
            card_view:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
