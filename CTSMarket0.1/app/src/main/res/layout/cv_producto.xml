<?xml version="1.0" encoding="utf-8"?>
  <androidx.cardview.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="250dp"
      android:layout_height="320dp"
      android:layout_margin="6dp"
      android:clickable="true"
      android:focusable="true"
      card_view:cardCornerRadius="8dp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl_product1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/degradante"
      android:visibility="visible">

    <ImageView
        android:id="@+id/iv_product_cv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="15dp"
        android:scaleType="centerCrop"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline69"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:elevation="15dp"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="left"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="18sp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline56"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline64"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="@+id/guideline57"
        card_view:layout_constraintTop_toTopOf="@+id/guideline71" />

    <TextView
        android:id="@+id/tv_price1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:elevation="15dp"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="left"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="14sp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline162"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline63"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/textView6"
        card_view:layout_constraintTop_toTopOf="@+id/guideline56" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:elevation="15dp"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/lightBrown"
        android:textSize="15sp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline62"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline34"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="@+id/guideline57"
        card_view:layout_constraintTop_toTopOf="@+id/guideline58"
        card_view:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:elevation="15dp"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="left"
        android:text="$"
        android:textColor="@color/lightBrown"
        android:textSize="14sp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline162"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline32"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintStart_toStartOf="@+id/guideline57"
        card_view:layout_constraintTop_toTopOf="@+id/guideline56"
        card_view:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_length1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="15dp"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="left"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="14sp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline162"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline64"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="@+id/guideline35"
        card_view:layout_constraintTop_toTopOf="@+id/guideline56"
        card_view:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline162"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.85" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.6" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline62"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline66"
        card_view:layout_constraintStart_toStartOf="@+id/guideline34"
        card_view:layout_constraintTop_toTopOf="@+id/guideline58"
        card_view:srcCompat="@drawable/ic_round_star_24" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


