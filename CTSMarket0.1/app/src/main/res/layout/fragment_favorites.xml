<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FavoritesFragment"
    android:background="#ffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/pb_fav"
            android:elevation="25dp"
            style="@style/SpinKitView.Large.Pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:foregroundGravity="center"
            android:visibility="gone"
            android:background="@drawable/background_general11"
            app:layout_constraintBottom_toTopOf="@+id/guideline445"
            app:layout_constraintEnd_toStartOf="@+id/guideline444"
            app:layout_constraintStart_toStartOf="@+id/guideline447"
            app:layout_constraintTop_toTopOf="@+id/guideline450" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline445"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.58" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.34" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline446"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline448"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline449"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline450"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline451"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.14" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline447"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <TextView
            android:id="@+id/tv_generic_fav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_general3"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:text="Favoritos"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline449"
            app:layout_constraintEnd_toStartOf="@+id/guideline444"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline447"
            app:layout_constraintTop_toTopOf="@+id/guideline448"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="5dp"
            android:src="@drawable/ic_round_favorite_border_blue"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline446"
            app:layout_constraintEnd_toStartOf="@+id/guideline444"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline447"
            app:layout_constraintTop_toTopOf="@+id/guideline43"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_fav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center_vertical"
            android:text=""
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline450"
            app:layout_constraintEnd_toStartOf="@+id/guideline444"
            app:layout_constraintStart_toStartOf="@+id/guideline447"
            app:layout_constraintTop_toTopOf="@+id/guideline451" />

        <ImageView
            android:id="@+id/iv_reload_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:src="@drawable/ic_baseline_refresh_24"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/guideline446"
            app:layout_constraintEnd_toStartOf="@+id/guideline444"
            app:layout_constraintStart_toStartOf="@+id/guideline447"
            app:layout_constraintTop_toTopOf="@+id/guideline43" />

        <TextView
            android:id="@+id/tv_error_fav"
            android:elevation="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semibold"
            android:gravity="center"
            android:textColor="#000000"
            android:visibility="gone"
            android:text=" ¡Algo salió mal! Por favor intentá mas tarde"
            android:drawableStart="@drawable/ic_baseline_error_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>