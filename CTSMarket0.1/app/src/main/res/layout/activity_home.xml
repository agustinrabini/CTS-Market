    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".activities.HomeActivity"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_degradante"
            android:layout_width="0dp"
            android:layout_height="700dp"
            android:orientation="vertical"
            android:rotation="90"
            app:layout_constraintBottom_toTopOf="@+id/guideline31"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.497"
            app:srcCompat="@drawable/degradante" />

        <ImageView
        android:id="@+id/iv_productos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btns_home"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline31"
        app:layout_constraintEnd_toStartOf="@+id/guideline40"
        app:layout_constraintStart_toStartOf="@+id/guideline33"
        app:layout_constraintTop_toTopOf="@+id/guideline37"
        app:srcCompat="@drawable/knife_icon_136467" />

    <ImageView
        android:id="@+id/iv_contacto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btns_home"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline31"
        app:layout_constraintEnd_toStartOf="@+id/guideline39"
        app:layout_constraintStart_toStartOf="@+id/guideline30"
        app:layout_constraintTop_toTopOf="@+id/guideline37"
        app:layout_constraintVertical_bias="0.469"
        app:srcCompat="@drawable/_213460_account_avatar_head_person_profile_user_115386" />

    <ImageView
        android:id="@+id/iv_exhibicion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btns_home"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline38"
        app:layout_constraintEnd_toStartOf="@+id/guideline40"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline33"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        app:srcCompat="@drawable/publicmuseumsign_89226" />

    <ImageView
        android:id="@+id/iv_talleres"
        android:src="@drawable/ic_map_foreground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btns_home"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline38"
        app:layout_constraintEnd_toStartOf="@+id/guideline39"
        app:layout_constraintStart_toStartOf="@+id/guideline30"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Productos"
        android:gravity="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline41"
        app:layout_constraintEnd_toStartOf="@+id/guideline40"
        app:layout_constraintStart_toStartOf="@+id/guideline33"
        app:layout_constraintTop_toTopOf="@+id/guideline31"
