<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CTSMarket05" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ligthBlue</item>
        <item name="colorPrimaryVariant">@color/ligthBlue</item>
        <item name="colorOnPrimary">#ffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffff</item>
        <item name="colorSecondaryVariant">#ffff</item>
        <item name="colorOnSecondary">#ffff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <item name="android:textColorHint">#ffff</item>
        <item name="android:editTextColor">#ffff</item>
        <item name="android:windowAnimationStyle">@style/animacion</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="animacion" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_in</item>
    </style>

    <style name="BottomNavigation">

        <item name="android:background">#ffff</item>
        <item name="itemIconTint">@color/ligthBlue</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.NoActionBar">

        <item name="colorSurface">#ffff</item>
        <item name="colorPrimaryDark">@color/ligthBlue</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
</resources>